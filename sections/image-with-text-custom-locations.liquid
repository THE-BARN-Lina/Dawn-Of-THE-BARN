<div class="custom-image-gallery">
  <h2>{{ section.settings.section_title }}</h2>
  <p>{{ section.settings.section_description }}</p>
  
  <div class="image-cards">
    {% for block in section.blocks %}
      <div class="image-card">
        <img src="{{ block.settings.image | img_url: '500x' }}" alt="{{ block.settings.heading }}">
        <h3>{{ block.settings.heading }}</h3>
        <p>{{ block.settings.description }}</p>
        <a href="{{ block.settings.button_link }}" class="button">{{ block.settings.button_label }}</a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Image Gallery"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Add a brief description here"
    }
  ],
  "blocks": [
    {
      "type": "image_with_text",
      "name": "Image with Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading Text"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        }
      ],
      "limit": 3
    }
  ]
}

{% endschema %}
