{%- style -%}
/* Add this CSS to your Shopify theme CSS editor */
.custom-image-gallery {
  text-align: center;
  padding: 20px;
}

.image-cards {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20px;
}

.image-card {
  width: calc(33.33% - 20px);
  margin-bottom: 20px;
  text-align: left;
}

.image-card img {
  width: 100%;
  height: auto;
}

.image-card h3 {
  margin-top: 10px;
  font-size: 18px;
}

.image-card p {
  margin-top: 5px;
  font-size: 14px;
}

.button {
  display: inline-block;
  margin-top: 10px;
  padding: 8px 16px;
  background-color: #333;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.button:hover {
  background-color: #555;
}

{%- endstyle -%}
<div class="custom-image-gallery">
  <h2>{{ section.settings.section_title }}</h2>
  <p>{{ section.settings.section_description }}</p>
  
  <div class="image-cards">
    {% for block in section.blocks %}
      <div class="image-card">
        <img src="{{ block.settings.image | img_url: '500x' }}" alt="{{ block.settings.heading }}">
        <h3>{{ block.settings.heading }}</h3>
        <p>{{ block.settings.description }}</p>
        <a href="{{ block.settings.button_link }}" class="button">{{ block.settings.button_label }}</a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Image Gallery"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Add a brief description here"
    }
  ],
  "blocks": [
    {
      "type": "image_with_text",
      "name": "Image with Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading Text"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        }
      ],
      "limit": 3
    }
  ]
}

{% endschema %}
