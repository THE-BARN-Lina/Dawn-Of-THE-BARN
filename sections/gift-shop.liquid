{%- style -%}
  :root  {
    --brown-clear: #8d7149;
    --white: #ffffff;
    --black: #000000;
    --green: #15aa27;
    --orange:#b26119;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}
    px;
  }
  .scroll-container {
    display: flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    width: 100%;
    overflow-x: auto; /* Enable horizontal scrolling */
  }

  .filter-buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height:200px;
    overflow-x: auto; /* Enable horizontal scrolling */
    margin-bottom:2rem;
    }

  .filter-button {
    /* Common button styles */
    padding: 8px 16px;
    transition: background-color 0.3s;
    font-size:16px;
    min-width: 130px;
    max-width:130px;
    height:175px;
    background-color: #121212;
   
    color: var(--white);
    cursor: pointer;
    margin-right:1.2rem;
    border:none;
  }
 
  .image-main-class {
    border-radius: 50px;
    transition: border 0.2s ease, padding 0.2s ease; /* Smooth transition for border and padding */
}

.filter-button:hover .image-main-class,
.active-button .image-main-class {
    border: 2px solid grey;
    padding: 6px;
}

.filter-button:hover {
    background-color: #1c1d1c;
}

.active-button {
    border-bottom: 2px solid #804d15; /* Adjusted active button border style */
    background-color: #1c1d1c;

}

  /* Styles for sections */
  .section-collection {
    display: none;
  }
  .section-collection.visible {
    display: block;
  }

  .filter-container-img-text{
    display:flex;
    flex-direction:column;
    justify-content:flex-start;
    align-items:center;
    height:150px;
  }

  .feature-collection-container{
    height:30vh;
    margin-top:6rem;
    margin-bottom:6rem;

    background-color:white;
  }

  .feature-collection-container{
   background-color:grey;
  }
  .feature-collection-text{
    color:black;
  }


/* Additional styles for smaller screens */
@media screen and (max-width: 500px) {

  .filter-buttons{
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }
  .filter-button{
    margin-bottom:1rem;
  }
  ::-webkit-scrollbar{
      height: 2px;
      width: 4px;
      background: black;
  }
  ::-webkit-scrollbar-thumb:horizontal{
      background: #804d15;
      border-radius: 10px;
  }
  ::-webkit-scrollbar-thumb:vertical{
      background: none;
      border:none;
  }

}



