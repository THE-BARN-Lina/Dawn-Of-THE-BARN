{%- style -%}
  :root  {
    --brown: #804d15;
    --white: #ffffff;
    --black: #000000;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}
    px;
  }

  .scroll-wrapper {
    overflow: hidden; /* Hide any horizontal overflow */
  }

  .scroll-container {
    display: flex;
    align-items: center;
    width: 100%;
    overflow-x: auto; /* Enable horizontal scrolling */
    background-color:none;
  }

  .filter-buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    min-height: 100px;
    overflow-x: auto; 
  }

  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

/* Styles for sections */
.section-collection {
  display: none;
}
.section-collection.visible {
  display: block;
}

/* Additional styles for smaller screens */
  .scroll-container {
    flex-wrap: nowrap; 
  }
 
  .filter-button-abo {
    margin-left: 1rem;
    margin-right: 1.5rem;
  }
  .filter-image-text-container{
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:space-around;
    text-align:center;

    margin:0.6rem;
    min-width:150px;

    min-height:180px;

    border-radius: 10px;

    background-image: linear-gradient(to right, rgb(141, 36, 49), rgb(205, 22, 36));
    transition: background-image 0.3s ease; /* Adding transition for the background image */

    padding-right:0.5rem;
    padding-left:0.5rem;
}
.filter-image-text-container p {
  padding:0px;
  margin:0px;
}

  .filter-image-text-container:hover{
    cursor: pointer;
    background-image: linear-gradient(to right, rgb(141, 36, 49), rgb(205, 22, 36)); /* New gradient on hover */

  }
  .filter-image-text-container:hover .image-button-filter {
   
    border: 4px solid transparent;
    box-shadow: 0 0 0 2px white, 0 0 0 16px transparent; 
    cursor: pointer;
}

  
  .image-button-filter{
    height:100px;
    width:100px;
    border-radius: 50%;
  }
 .xmas-title{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size:16px;
 }

 @media (max-width: 1250px) {
