{% schema %}
  {
    "name": "THE BARN VIDEO",
    "settings": [
         {
      "type": "text",
      "id": "video_id",
      "default": "VnAQDO-fg6M",
      "label": "Video ID",
      "info": " For 'https://www.youtube.com/watch?v=VnAQDO-fg6M' the ID would Be 'VnAQDO-fg6M'"
    },
    {
      "type": "text",
      "id": "overlay",
      "label": "Overlay Text"
    },
       {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "video_height",
      "min": 30,
      "max": 200,
      "step": 5,
      "unit": "vh",
      "label": "Video Height",
      "default": 70
    },
    {
      "type": "checkbox",
      "id": "video_autoplay",
      "label": "Video Mute & Autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "video_loop",
      "label": "Video Loop",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
    ],
     "presets": [
    {
      "name": "Video with Text"
    }]
  }
{% endschema %}
<div style="display:flex;   align-items: center;
  justify-content: center;"><iframe width="700px" height="394" src="https://www.youtube-nocookie.com/embed/{{ section.settings.video_id }}?playlist={{ section.settings.video_id }}
    &loop=1
    &controls=0
    &autoplay=1
    &mute=1&amp;start=5"
    
    title="THE BARN" frameborder="0" allow="accelerometer; ; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
<div id="text">
  <h3>{{section.settings.overlay}}</h3>
</div>
</div>
<style>

  .section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
}

iframe{
  height: {{ section.settings.video_height}};
  width: calc({{ section.settings.video_height}} * 16 /9)vh;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

h3{
  background: rgba(0,0,0,0);
  padding: 10px;
}

#text{
  position: absolute;
  color: #FFFFFF;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
 @media only screen and (max-width: 600px) {
iframe{
height:30vh;
}
#text{
display:none}
}
</style>

