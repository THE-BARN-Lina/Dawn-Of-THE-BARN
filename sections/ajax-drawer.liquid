{% schema %}
  {
    "name": "Drawer",
    "settings": [
		{
        "type": "collection",
        "id": "collection_beans",
        "label": "Beans Collection"
},
	{
        "type": "collection",
        "id": "collection_subs",
        "label": "Subscription Collection"
},
{
  "type": "header",
  "content": "Banner Settings"
},

{
        "type": "checkbox",
        "id": "show-banner",
        "label": "Show Banner?",
       "default": false

},

{
        "type": "product",
        "id": "banner-product",
        "label": "Banner Product"

},
{
        "type": "image_picker",
        "id": "banner-icon",
        "label": "Banner Icon"
},

{
        "type": "text",
        "id": "banner-text",
        "label": "Banner Text",
        "default":"Plant 1 tree in Brazil with us for €1.50"

},

  
{"type": "color",
  "id": "banner-color",
  "label": "Banner Background Color",
  "default": "#067A46"
},
{"type": "color",
  "id": "banner-hover-color",
  "label": "Banner Hover Background Color",
  "default": "#064B2C"
}

],
  "blocks": [
     {
       "name": "Country",
       "type": "country_select",
       "settings": [
         {
           "type": "text",
           "id": "country",
           "label": "Country",
           "default": "Germany"	
         },
			
		{
			"type": "number",
           "id": "cart_min",
           "label": "Cart Cents Until Free"
		},
		{
			"type": "image_picker",
           "id": "img",
           "label": "Identifing image"
		}

       ]
     }
   ]
  }
{% endschema %}

  

 

  <div class="cart-side-panel hide" id="cart-side-panel ">


      <div class="cart-container">
        <div class="cart_content " id="cart_content">
         <div class="up">
              <div class="block-cart-header">
                  <a href="javascript:void(0)" class="cart-close">{% include 'icon-close' %}</a>
                  {% comment %}
                  <h4>Shopping Cart (<span class="cart_qty_cls">{{ cart.item_count }}</span>)</h4>
                  {% endcomment %}
                  <h4>
                      YOUR CART
                  </h4>

              </div>

            
          
           <div  class="new-outer">
                        <div class="new" id="new"></div>

                    	  <div id="recomendation_outer" class="recomendation_outer"> </div>
           </div>   
         <div class="Total">

        
                      <b>
                          <div class="drawer_price_outer">
                              <p>TOTAL</p>
                              <p id="drawer_total_price">00.00€</p>
                          </div>
                      </b>
                      <div class="hide" id="shipping_indicator">
                          <div class="drawer_price_outer">
                              <span>SHIPPING</span>
                              <div class="ship_message hide" id="not_free">
                                  <span id="price_until_free">30.00€</span>
                                  <span>away from free shipping! </span>
                                  <span id="shiping_country">(Germany)</span>
                              </div>
                              <div class="ship_message" id="free">
                                  <span>Free Shipping </span>
                                  <span id="shiping_country">Germany ✔</span>
                              </div>
                          </div>
                          <div class="light-grey">
                              <div id="indicator" class="outer-bar">
                                  <div class="inner-bar" id="red"></div>
                              </div>
                          </div>
                     </div>
                                          <btn class="btn drawer_checkout" id="drawer_checkout">Checkout</btn>
          {% if section.settings.show-banner and section.settings.banner-product!= null%}
                  <btn class="tree_bar drawer_checkout btn" id="bottom_bar">
                      <span>{{section.settings.banner-text}} </span></btn>         
         

                                                                           
                    </div>
           
          {%endif%}
             </div>
           </div>  
           
         <div id="color_overlay" class="color_overlay hide">
  </div>
      <div id="empty_message" class="hide">
            <div class="block-cart-header">
                  <a href="javascript:void(0)" class="cart-close">{% include 'icon-close' %}</a>
                  {% comment %}
                  <h4>Shopping Cart (<span class="cart_qty_cls">{{ cart.item_count }}</span>)</h4>
                  {% endcomment %}
                  <h4>
                      YOUR CART
                  </h4>

              </div>
          <p class="centered">Your cart is currently empty.</p>
      </div>
        </div>
         </div>    
 
{%render "ajax-axios"%}
{%render "ajax-recommendation"%}



