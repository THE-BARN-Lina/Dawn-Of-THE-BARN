<style>
  .kranzler_events-container_main {
    margin: 2rem;
    padding: 0rem;
  }

  .img-container {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .kranzler_events-img {
    width: 100vw;
    height: 100%;
    object-fit: cover;
  }

  .kranzler_events-catering-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    perspective: 1000px; /* Creates a 3D perspective for flipping effect */
  }

  .front-content,
  .back-content {
    width: 100%;
    height: 100%;
    backface-visibility: hidden; /* Ensures the back content is not visible initially */
  }

  .back-content {
    transform: rotateY(180deg); /* Flips the back content, initially hidden */
  }

  /* Define the .flipped class for flipping effect */
  .kranzler_events-catering-container.flipped .front-content {
    transform: rotateY(180deg);
  }

  .kranzler_events-catering-container.flipped .back-content {
    transform: rotateY(0); /* Reset rotation for back content when flipped */
  }

  .kranzler_events-title {
    text-align: center;
  }

  @media only screen and (min-width: 990px) {}

  /* The grid container */
.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px; /* Adjust the gap between grid items as needed */
}

/* Each grid item */
.grid-item {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0; /* Add a background color or remove it if you don't need it */
  /* Adjust the width, height, and other styles of grid items as needed */
}

/* The centered word within each grid item */
.centered-word {
  font-size: 24px; /* Adjust the font size as needed */
}
</style>

