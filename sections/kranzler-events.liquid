<style > :root
{
  --primary-color: #007bff19; /* Blue */
  --secondary-color: #6c757d34; /* Gray */
  --accent-color: #28A745; /* Green */
}
.kranzler_events-container_main {
  margin: 2rem;
  padding: 0;
}
.kranzler_events-container_1 {
  max-width: 100%;
