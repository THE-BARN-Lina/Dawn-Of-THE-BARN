<div class="careers-detail-container">
  {% for career_detail in shop.metaobjects.career_detail.values %}
    {% if career_detail.handle == pageHandle %}
      <div class="career-detail-container">
        <div class="img">
          <img src="{{ career_detail.photo | img_url:'500x' }}" alt="career_detail" loading="lazy" height="" width="">
        </div>
        <div class="career-detail-body">
          <h2 class="career-detail-name">{{ career_detail.job_title }}</h2>
          <h3 class="career-detail-m_w_d">{{ career_detail.job_description }}</h3>

          <p class="career-text">{{ career_detail.description }}</p>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>




{% schema %}
  {
    "name": "Career Detail",
    "settings": [],
    "presets": [{
        "name": "Career Detail",
        "category": "Text"
  }]
  }
{% endschema %}

<script>
document.addEventListener('DOMContentLoaded', function(){
    var pageHandle = window.location.pathname.split('/')[2];
    var careerDetailContainers = document.querySelectorAll('.career-detail-container');
    
    careerDetailContainers.forEach(function(container) {
        var careerHandle = container.querySelector('.career-detail-name').textContent;
        if (careerHandle === pageHandle) {
            container.style.display = 'block';
        } else {
            container.style.display = 'none';
        }
    });
});
</script>