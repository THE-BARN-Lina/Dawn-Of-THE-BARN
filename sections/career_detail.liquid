<style>
.careers-detail-container{
  padding:4rem;
}
.image_container{
  max-height: 300px;
  width: 100%;
  overflow: hidden;
  position: relative;
}
  
 img{
  width:100%;
  max-height: 400px;
  object-fit: cover;
  object-position: center; /* Center the image within the container */

}
@media only screen and (min-width: 990px) {
  
}

</style>

<div class="careers-detail-container">
  {% for career_detail in shop.metaobjects.career_detail.values %}
    {% if career_detail.page_handle_hardcoded == page.handle %}
      <div class="career-detail-container">
        <div class="img_container">
          <img src="{{ career_detail.photo | img_url:'500x' }}" alt="career_detail" loading="lazy" height="" width="">
        </div>
        <div class="career-detail-body">
          <h2 class="career-detail-name">{{ career_detail.job_title }}</h2>
          <p class="career-detail-m_w_d">{{ career_detail.job_description }}</p>
          <p class="career-detail-m_w_d">{{ career_detail.job_description_2 }}</p>
          <a href="{{ career_detail.button_1 }}" class="button primary--button">APPLY HERE !</a>
          <h2 class="career-detail-m_w_d">{{ career_detail.title_1 }}</h2>
          <p class="career-detail-m_w_d">{{ career_detail.title_description_2 }}</p>


        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

<!-- Debug -->
<div>
  Page handle: {{ page.handle }}
  {% for career_detail in shop.metaobjects.career_detail.values %}
    <div>
  Page hardcoded handle: {{ career_detail.page_handle_hardcoded }}
    </div>
  {% endfor %}
</div>
<!-- End Debug -->



{% schema %}
  {
    "name": "Career Detail",
    "settings": [],
    "presets": [{
        "name": "Career Detail",
        "category": "Text"
  }]
  }
{% endschema %}