{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

{% comment %} ////////////////////// Custom Mega Menu Start Here ////////////////////////// {% endcomment %}
<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details
              id="Details-HeaderMenu-{{ forloop.index }}"
              class="mega-menu"
              data-open="false">
              <summary class="header__menu-item list-menu__item link focus-inset menu-summary">
                <span
                  {%- if link.child_active %}
                  class="header__active-menu-item"
                  {% endif %}>
                  {{- link.title | escape -}}
                </span>
                {% render 'icon-caret' %}
              </summary>

              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content gradient motion-reduce global-settings-popup"
                tabindex="-1">
                <div class="container-right-mega-menu page-width">
                  <div class="link_title-container">
                    <div class="link_title">
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </div>

                    <ul class="mega-menu__list {% if link.levels == 1 %} mega-menu__list--condensed{% endif %}" role="list">
                      {%- for childlink in link.links -%}
                        <li class="li-mega-menu">
                          <a
                            href="{{ childlink.url }}"
                            class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                            {% if childlink.current %}
                            aria-current="page"
                            {% endif %}>
                            {{ childlink.title | escape }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>

                  <div class="mega-menu-container">
                    {%- if link.title == 'CHRISTMAS' or link.title == 'WEIHNACHTEN' -%}
                      <a href="{{ section.settings.christmas_link_1 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.christmas_image_1 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.christmas_label_1 }}"
                          loading="lazy">
                        <p>{{ section.settings.christmas_label_1 }}</p>
                      </a>
                      <a href="{{ section.settings.christmas_link_2 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.christmas_image_2 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.christmas_label_2 }}"
                          loading="lazy">
                        <p>{{ section.settings.christmas_label_2 }}</p>
                      </a>
                      <a href="{{ section.settings.christmas_link_3 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.christmas_image_3 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.christmas_label_3 }}"
                          loading="lazy">
                        <p>{{ section.settings.christmas_label_3 }}</p>
                      </a>

                    {%- elsif link.title == 'SUBSCRIPTIONS' -%}
                      <a href="{{ section.settings.subscription_link_1 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.subscription_image_1 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.subscription_label_1 }}"
                          loading="lazy">
                        <p>{{ section.settings.subscription_label_1 }}</p>
                      </a>
                      <a href="{{ section.settings.subscription_link_2 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.subscription_image_2 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.subscription_label_2 }}"
                          loading="lazy">
                        <p>{{ section.settings.subscription_label_2 }}</p>
                      </a>
                      <a href="{{ section.settings.subscription_link_3 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.subscription_image_3 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.subscription_label_3 }}"
                          loading="lazy">
                        <p>{{ section.settings.subscription_label_3 }}</p>
                      </a>

                    {%- elsif link.title == 'SHOP' -%}
                      <a href="{{ section.settings.shop_link_1 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.shop_image_1 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.shop_label_1 }}"
                          loading="lazy">
                        <p>{{ section.settings.shop_label_1 }}</p>
                      </a>
                      <a href="{{ section.settings.shop_link_2 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.shop_image_2 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.shop_label_2 }}"
                          loading="lazy">
                        <p>{{ section.settings.shop_label_2 }}</p>
                      </a>
                      <a href="{{ section.settings.shop_link_3 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.shop_image_3 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.shop_label_3 }}"
                          loading="lazy">
                        <p>{{ section.settings.shop_label_3 }}</p>
                      </a>

                    {%- elsif link.title == 'BLOG' -%}
                      <a href="{{ section.settings.blog_link_1 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.blog_image_1 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.blog_label_1 }}"
                          loading="lazy">
                        <p>{{ section.settings.blog_label_1 }}</p>
                      </a>
                      <a href="{{ section.settings.blog_link_2 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.blog_image_2 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.blog_label_2 }}"
                          loading="lazy">
                        <p>{{ section.settings.blog_label_2 }}</p>
                      </a>
                      <a href="{{ section.settings.blog_link_3 }}" class="container-right-mega-menu-item lang-link">
                        <img
                          src="{{ section.settings.blog_image_3 | image_url: '230x230' }}"
                          width="230"
                          height="230"
                          alt="{{ section.settings.blog_label_3 }}"
                          loading="lazy">
                        <p>{{ section.settings.blog_label_3 }}</p>
                      </a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
            aria-current="page"
            {% endif %}>
            <span
              {%- if link.current %}
              class="header__active-menu-item"
              {% endif %}>
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
{% comment %} ////////////////////// Custom Mega Menu Ends Here /////////////////////////// {% endcomment %}
