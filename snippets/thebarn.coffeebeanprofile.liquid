    <script>
const el1 = document.getElementById("Slide-{{ section.id }}-1");
const el2 = document.getElementById("Slide-{{ section.id }}-2");
const el3 = document.getElementById("Slide-{{ section.id }}-3");

var els = [el1, el2, el3];

const p1 = el1.getElementsByTagName("p")[0];
const p2 = el2.getElementsByTagName("p")[0];
const p3 = el3.getElementsByTagName("p")[0];

const ps = [p1,p2,p3];

for(let i = 0; i < els.length; i++){

  let first_p =  els[i].getElementsByTagName("p")[0];
  first_p.classList.toggle("content");
}

for(let i = 0; i < els.length; i++){
els[i].addEventListener("click",function(){
    console.log(p1, p2, p3, window.innerWidth) ;
    if(window.innerWidth < 900){

      els[i].classList.toggle("active");
      let first_p =  ps[i];

   
        if (first_p.style.maxHeight){
          first_p.style.maxHeight = null;
        } else {
          first_p.style.maxHeight = first_p.scrollHeight + "px";
        } 
        first_p.classList.toggle("active");   
        
        } 
     else
     {
      els[0].classList.toggle("active");
      els[1].classList.toggle("active");
      els[2].classList.toggle("active");

      for(let j = 0; j < ps.length; j++){
        let first_p =  ps[j];

   
        if (first_p.style.maxHeight){
          first_p.style.maxHeight = null;
        } else {
          first_p.style.maxHeight = first_p.scrollHeight + "px";
        } 
        first_p.classList.toggle("active");   
        

      }
     }

  });
  }

  window.addEventListener('resize', function(event) {
    console.log(window.innerWidth);
    if (window.innerWidth > 990)
    {
      els[0].classList.remove("active");
      els[1].classList.remove("active");
      els[2].classList.remove("active");

      for(let j = 0; j < ps.length; j++){
        let first_p =  ps[j];

   
        if (first_p.style.maxHeight){
          first_p.style.maxHeight = null;
        } else {
          first_p.style.maxHeight = first_p.scrollHeight + "px";
        } 
        first_p.classList.remove("active");   
        

      }
    }
    
}, true);




</script>




