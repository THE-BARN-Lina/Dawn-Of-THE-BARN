{{ 'thebarn.product_card.css' | asset_url | stylesheet_tag }}

{% if   card_product.metafields.custom.region %}
    <hr style="margin:10px 0">
    <div class="card__50_50__grid">
       <p style="text-transform: capitalize;
                   text-align: center;
                   background-color: #698972;
                   font-size: 12px;
                   width: 100%;
                   padding: 3px;
                   min-height: 24px; 
                   height:fit-content;
                   margin:0px;
                   grid-area: a;" > {{ card_product.metafields.custom.region|escape |downcase }}</p>
   
    {% assign tastenotes = card_product.metafields.custom.taste_notes | split: "." %}
     {% if tastenotes.size > 1 %}
       <div class = "card_tastnote_text" style="grid-area: b;"> <p style= "height:fit-content; margin: 0px;"> {{ tastenotes.first |downcase}} </p> </div>
       <div class = "card_tastnote_text"  style="grid-area: c;"> <p style= "height:fit-content; margin: 0px;"> {{ tastenotes[1] |downcase}} </p> </div>
     {% else %}
      <p class="card_tastnote_text"style="text-transform: capitalize; grid-area: b;"> {{ card_product.metafields.custom.taste_notes|escape |downcase }}</p>
     {% endif %} 
   </div>
    <hr style="margin:10px 0 0 0">
{% endif %}   

